
@{
    Layout = null;
}

@using SmartRescueSystem.Models;
@model SmartRescueSystem.Models.Admin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/MDB-Free_4.8.8/css/bootstrap.min.css">
    <!-- MDB CSS -->
    <link rel="stylesheet" href="~/MDB-Free_4.8.8/css/mdb.min.css">
    <!-- custom Stylesheet -->
    <link rel="stylesheet" href="~/MDB-Free_4.8.8/css/style.css">
    <title>SmartRescueSystem | Welcome</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark scrolling-navbar" style="background-color:#24355C">

        <div class="container">

            <!-- Navbar brand -->
            <a class="navbar-brand" href="#">Smart Rescue System</a>

            <!-- Collapse button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#topnav"
                    aria-controls="topnav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="topnav">

                <!-- Links -->
                <ul class="navbar-nav mr-auto smooth-scroll">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav mr-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Logout">Logout</a>
                    </li>
                </ul>
                <!-- Links -->
            </div>
        </div>

    </nav>
    <main>
        <div class="container">
            <h2 class="mt-5">Service Provider</h2>
            <div class="card mt-3">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.ServiseProvider.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.ServiseProvider.PhoneNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.ServiseProvider.Fax)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.ServiseProvider.Address)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SPlist)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Fax)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                </tr>
                            }
                    </tbody>
                    </table>
                </div>
            </div>

            <h2 class=" mt-3"> Add Catagory</h2>
            <form class="form-inline" action="/Admin/AddCatagory" method="post">
                <div class="md-form">
                    @Html.TextBoxFor(m => m.Catagory.Catagory_title, new { @class = "form-control" })
                    @Html.LabelFor(m => m.Catagory.Catagory_title)
                    @Html.ValidationMessageFor(m => m.Catagory.Catagory_title,"",new { @class="red-text"})
                </div>
                <button class="btn btn-primary ml-3" type="submit">Save</button>
            </form>

            <h2 class="mt-3">Catagories</h2>
            <div class="card mt-3 mb-2">
                <div class="card-body">
                    <table class="table table-striped table-hover" style="max-height:400px; overflow:auto;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.Catagory.Catagory_title)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Catagorylist)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Catagory_title)<td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </main>
    <footer class="page-footer blue">
        <div class="footer-copyright text-center py-3">
            Made with <span>&hearts;</span>
            <a href="#"> Eziline</a>
        </div>
    </footer>
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="~/MDB-Free_4.8.8/js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/MDB-Free_4.8.8/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/MDB-Free_4.8.8/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/MDB-Free_4.8.8/js/mdb.min.js"></script>
    <!-- validation script -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>